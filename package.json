{
  "name": "evaluapro",
  "description": "Plataforma MERN para evaluación universitaria: generación de exámenes en PDF, vinculación por QR, calificación asistida (OMR) y operación local con Docker + dashboard.",
  "version": "0.2.0-beta.1",
  "author": {
    "name": "I.S.C. Erick Renato Vega Ceron"
  },
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/Dtcsrni/EvaluaPro_Sistema_Universitario"
  },
  "keywords": [
    "mern",
    "universidad",
    "evaluacion",
    "examenes",
    "pdf",
    "qr",
    "omr",
    "mongo",
    "express",
    "react",
    "vite"
  ],
  "workspaces": [
    "apps/backend",
    "apps/frontend",
    "apps/portal_alumno_cloud"
  ],
  "engines": {
    "node": ">=24"
  },
  "scripts": {
    "dev": "node scripts/detect-host-ip.mjs && npm-run-all --parallel dev:backend dev:frontend:wait",
    "dev:backend": "node scripts/start-tray.mjs --mode dev --port 4519 && node scripts/detect-host-ip.mjs && docker compose --profile dev up --build --force-recreate mongo_local api_docente_local",
    "dev:frontend": "npm -C apps/frontend run dev",
    "dev:frontend:wait": "node scripts/wait-api.mjs && npm -C apps/frontend run dev",
    "dev:portal": "npm -C apps/portal_alumno_cloud run dev",
    "portal:prod": "node scripts/start-portal-prod.mjs",
    "stack:dev": "node scripts/start-tray.mjs --mode dev --port 4519 && node scripts/detect-host-ip.mjs && docker compose --profile dev up --build --force-recreate",
    "stack:prod": "node scripts/start-tray.mjs --mode prod --port 4519 && node scripts/detect-host-ip.mjs && docker compose --profile prod up --build --force-recreate mongo_local api_docente_prod web_docente_prod",
    "typecheck": "npm run --workspaces --if-present typecheck",
    "test": "npm -C apps/backend run test",
    "test:backend": "npm -C apps/backend run test",
    "test:backend:ci": "node scripts/retry.mjs --name backend --attempts 3 --delay-ms 750 --command \"npm -C apps/backend run test\"",
    "test:portal": "npm -C apps/portal_alumno_cloud run test",
    "test:portal:ci": "node scripts/retry.mjs --name portal --attempts 3 --delay-ms 750 --command \"npm -C apps/portal_alumno_cloud run test\"",
    "test:frontend": "npm -C apps/frontend run test",
    "test:frontend:ci": "node scripts/retry.mjs --name frontend --attempts 5 --delay-ms 900 --command \"npm -C apps/frontend run test -- --pool=forks --reporter=verbose\" --fallback-command \"npm -C apps/frontend run test -- --pool=threads --reporter=verbose\"",
    "test:dashboard:repair": "node --test scripts/tests/dashboard-repair.test.mjs",
    "test:flujo-docente:ci": "npm -C apps/backend run test -- --reporter=verbose tests/integracion/flujoDocenteParcialE2E.test.ts tests/integracion/flujoDocenteGlobalE2E.test.ts",
    "test:e2e:docente-alumno:ci": "npm -C apps/backend run test -- --reporter=verbose tests/integracion/flujoDocenteAlumnoProduccionLikeE2E.test.ts",
    "test:global-grade:ci": "npm -C apps/backend run test -- --reporter=verbose tests/calificacion.global.reglas.test.ts tests/integracion/calificacionGlobalContratoE2E.test.ts",
    "test:pdf-print:ci": "npm -C apps/backend run test -- --reporter=verbose tests/integracion/pdfImpresionContrato.test.ts",
    "test:pdf-visual:ci": "npm run test:pdf-print:ci",
    "test:ux-visual:ci": "npm -C apps/frontend run test -- --reporter=verbose tests/ux.visual.test.tsx",
    "test:ux-quality:ci": "npm -C apps/frontend run test -- --reporter=verbose tests/ux.quality.test.tsx",
    "test:e2e:journeys:ci": "npm run test:ux-visual:ci",
    "test:dataset-prodlike:ci": "node scripts/testing/export-anon-fixture.mjs && node scripts/testing/validate-anon-fixture.mjs && node scripts/testing/import-anon-fixture.mjs",
    "test:qa:manifest": "node scripts/testing/generar-qa-manifest.mjs",
    "test:coverage:ci": "npm -C apps/backend run test:coverage && npm -C apps/portal_alumno_cloud run test:coverage && npm -C apps/frontend run test:coverage",
    "docs:generate": "node scripts/docs.mjs --write",
    "docs:check": "node scripts/docs.mjs --check",
    "diagramas:generate": "node scripts/diagramas.mjs --write",
    "diagramas:check": "node scripts/diagramas.mjs --check",
    "diagramas:render": "node scripts/diagramas-render.mjs --write",
    "diagramas:render:check": "node scripts/diagramas-render.mjs --check",
    "diagramas:consistencia:check": "node scripts/diagramas-consistencia.mjs --check",
    "docs:sync": "npm run diagramas:generate && npm run diagramas:render && npm run docs:generate",
    "routes:check": "node scripts/routes-check.mjs",
    "security:env:check": "node scripts/security-env-check.mjs",
    "security:audit": "npm audit --audit-level=high",
    "docs:carpetas:generate": "node scripts/generar-readmes-carpetas.mjs",
    "inventario:codigo": "node scripts/inventario-codigo.mjs",
    "bigbang:olas:check": "node scripts/bigbang-olas-check.mjs",
    "bigbang:olas:strict": "node scripts/bigbang-olas-check.mjs --strict",
    "perf:collect": "tsx scripts/perf-collect.ts",
    "perf:collect:business": "tsx scripts/perf-collect-business.ts",
    "perf:baseline": "node scripts/perf-baseline.mjs",
    "perf:baseline:business": "node scripts/perf-baseline.mjs --input=reports/perf/business.latest.json --output=docs/perf/baseline.business.json",
    "perf:check": "npm run perf:collect && node scripts/perf-check.mjs",
    "perf:check:business": "npm run perf:collect:business && node scripts/perf-check-business.mjs",
    "ia:docblocks": "node scripts/ia-docblocks.mjs",
    "ia:handoff:quick": "node scripts/ia-handoff.mjs --mode quick",
    "ia:handoff:full": "node scripts/ia-handoff.mjs --mode full",
    "release:gate:prod-flow": "node scripts/release/gate-prod-flow.mjs",
    "release:preflight:global": "node scripts/release/preflight-global-prod.mjs",
    "pipeline:contract:check": "node -e \"const fs=require('fs');['ci/pipeline.contract.md','ci/pipeline.matrix.json'].forEach(p=>{if(!fs.existsSync(p)){throw new Error('Missing '+p)}});console.log('pipeline contract OK');\"",
    "test:ci": "npm run lint && npm run typecheck && npm run build && npm run docs:check && npm run diagramas:check && npm run diagramas:render:check && npm run diagramas:consistencia:check && npm run routes:check && npm run test:backend:ci && npm run test:portal:ci && npm run test:frontend:ci",
    "build": "npm run --workspaces --if-present build",
    "lint": "npm run --workspaces --if-present lint",
    "verify:prod": "npm run test:backend:ci && npm run test:frontend:ci && npm run build",
    "start:prod": "npm run verify:prod && npm run stack:prod",
    "start": "npm run start:prod",
    "start:portal": "npm -C apps/portal_alumno_cloud run start",
    "msi:build": "powershell -NoProfile -ExecutionPolicy Bypass -File scripts/build-msi.ps1",
    "status": "node scripts/dashboard.mjs",
    "vscode:tune": "node scripts/vscode-tune.mjs",
    "vscode:prune-extensions": "node scripts/vscode-prune-extensions.mjs",
    "reset:local": "node scripts/reset-local.mjs",
    "reset:local:yes": "node scripts/reset-local.mjs --yes"
  },
  "devDependencies": {
    "@mermaid-js/mermaid-cli": "^11.12.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.25",
    "@types/node": "^24.10.8",
    "@types/supertest": "^2.0.16",
    "@typescript-eslint/eslint-plugin": "^8.53.0",
    "@typescript-eslint/parser": "^8.53.0",
    "@vitest/coverage-v8": "^4.0.18",
    "eslint": "^8.57.1",
    "jsdom": "^27.4.0",
    "mongodb-memory-server": "^9.5.0",
    "npm-run-all": "^4.1.5",
    "supertest": "^6.3.4",
    "tsx": "^4.20.5",
    "typescript": "^5.9.3",
    "vitest": "^4.0.17"
  }
}
