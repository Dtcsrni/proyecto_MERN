{
  "name": "backend",
  "description": "API docente (Express + TypeScript + MongoDB) para gestión de evaluaciones, autenticación y flujo de examen.",
  "version": "1.0.0-beta.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/Dtcsrni/EvaluaPro_Sistema_Universitario"
  },
  "keywords": [
    "api",
    "express",
    "typescript",
    "mongodb",
    "mongoose",
    "evaluacion",
    "docente"
  ],
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc --project tsconfig.json",
    "typecheck": "tsc --noEmit --project tsconfig.json --pretty false",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint . --ext .ts --max-warnings=0",
    "dev:omr:geo-tight": "tsx scripts/omr-run-dev-profile.ts geo_tight_search",
    "dev:omr:actual": "tsx scripts/omr-run-dev-profile.ts actual",
    "auth:reset-password": "tsx scripts/auth-reset-password.ts",
    "omr:eval:profile": "tsx scripts/omr-eval-profile.ts",
    "omr:sweep:geometria": "tsx scripts/omr-sweep-geometria.ts",
    "omr:sweep:umbrales": "tsx scripts/omr-sweep-umbrales.ts",
    "omr:diagnose:rechazo": "tsx scripts/omr-diagnose-rechazo.ts",
    "omr:tv3:eval:golden": "tsx scripts/omr-tv3-eval-golden.ts --dataset ../../omr_samples_tv3 --report ../../reports/qa/latest/omr-tv3-gate.json"
  },
  "dependencies": {
    "bcryptjs": "^3.0.3",
    "cors": "^2.8.5",
    "decimal.js": "^10.4.3",
    "docx": "^9.5.2",
    "dotenv": "^17.2.3",
    "exceljs": "^4.1.1",
    "express": "^5.2.1",
    "express-rate-limit": "^8.2.1",
    "google-auth-library": "^9.15.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "jsqr": "^1.4.0",
    "mongoose": "^9.1.3",
    "pdf-lib": "^1.17.1",
    "qrcode": "^1.5.4",
    "sharp": "^0.34.1",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@types/jsonwebtoken": "^9.0.5",
    "@types/qrcode": "^1.5.5"
  }
}
