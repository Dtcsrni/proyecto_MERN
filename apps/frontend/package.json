{
  "name": "frontend",
  "description": "UI React (Vite) para portal docente/alumno: autenticaci贸n, gesti贸n de evaluaciones y flujos de aplicaci贸n/calificaci贸n.",
  "version": "1.0.0-beta.1",
  "license": "AGPL-3.0-or-later",
  "private": true,
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/Dtcsrni/EvaluaPro_Sistema_Universitario"
  },
  "keywords": [
    "react",
    "vite",
    "frontend",
    "docente",
    "alumno",
    "evaluacion"
  ],
  "scripts": {
    "dev": "vite",
    "dev:alumno": "node -e \"const {spawnSync}=require('child_process');const env={...process.env,VITE_APP_DESTINO:'alumno'};const r=spawnSync('vite',[],{stdio:'inherit',shell:true,env});process.exit(r.status??1);\"",
    "dev:docente": "node -e \"const {spawnSync}=require('child_process');const env={...process.env,VITE_APP_DESTINO:'docente'};const r=spawnSync('vite',[],{stdio:'inherit',shell:true,env});process.exit(r.status??1);\"",
    "build": "tsc -b && vite build",
    "build:alumno": "node -e \"const {spawnSync}=require('child_process');const env={...process.env,VITE_APP_DESTINO:'alumno'};const r=spawnSync('npm',['run','build','--','--outDir','dist-alumno'],{stdio:'inherit',shell:true,env});process.exit(r.status??1);\"",
    "build:docente": "node -e \"const {spawnSync}=require('child_process');const env={...process.env,VITE_APP_DESTINO:'docente'};const r=spawnSync('npm',['run','build','--','--outDir','dist-docente'],{stdio:'inherit',shell:true,env});process.exit(r.status??1);\"",
    "typecheck": "tsc -b --pretty false",
    "preview": "vite preview",
    "preview:alumno": "vite preview --outDir dist-alumno",
    "preview:docente": "vite preview --outDir dist-docente",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage --pool=forks --reporter=verbose",
    "lint": "eslint . --ext .ts,.tsx --max-warnings=0"
  },
  "dependencies": {
    "@react-oauth/google": "^0.12.2",
    "jsqr": "^1.4.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.5.0",
    "@testing-library/react": "^16.0.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/react": "^19.2.8",
    "@types/react-dom": "^19.2.0",
    "@vitejs/plugin-react": "^5.0.0",
    "eslint": "^8.57.1",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^7.0.1",
    "jsdom": "^27.4.0",
    "vite": "^7.0.0",
    "vite-plugin-mkcert": "^1.17.6"
  }
}
